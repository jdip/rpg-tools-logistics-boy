{
  "name": "rpg-tools-logistics-boy",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev-server\" \"npm run watch-css\" \"npm run watch-hbs\" \"npm run cy-wait\"  ",
    "dev-no-cy": "concurrently --kill-others \"npm run dev-server\" \"npm run watch-css\" \"npm run watch-hbs\" ",
    "dev-server": "vite",
    "build": "tsc && vite build",
    "cy": "npx cypress open --e2e --browser chrome",
    "test": "npx cypress run --e2e --browser chrome",
    "test-watch": "chokidar --initial \"src/**/*.css\" -c \"npm run css\"",
    "watch": "chokidar --initial \"src/**/*\" \"vite.config.ts\" \"tsconfig.json\" -c \"npm run build\"",
    "css": "sed -e '$s/$/\\n/' -s src/style.css src/**/*.css | npx postcss-cli -o dist/style.css",
    "watch-css": "chokidar --initial \"src/**/*.css\" \"src/style.css\" -c \"npm run css\"",
    "hbs": "npx copyfiles -u 2 src/templates/*.hbs dist/templates/",
    "watch-hbs": "chokidar --initial \"src/templates/*.hbs\" -c \"npm run hbs\"",
    "watch-files": "concurrently --kill-others \"npm run watch-css\" \"npm run watch-hbs\" ",
    "cy-wait": "wait-on -w 1000 dist/style.css dist/module.json dist/logistics-boy.mjs dist/logistics-boy.mjs.map dist/templates/build-interface.hbs && npx cypress open --e2e --browser chrome"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "cypress": "^12.3.0",
    "cypress-vite": "^1.3.0",
    "cypress-watch-and-reload": "^1.10.5",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-nested": "^6.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-istanbul": "^4.0.0",
    "wait-on": "^7.0.1"
  }
}
